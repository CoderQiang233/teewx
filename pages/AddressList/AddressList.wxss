view {
  box-sizing: border-box;
}

.caitiao {
  width: 100vw;
  height: 2rpx;
  position: fixed;
  top: 0;
  left: 0;
}

.address_box {
  width: 100vw;
  padding-left: 30rpx;
}

.address_list {
  width: 100%;
  height: 150rpx;
  border-bottom: 1rpx solid #e8e8e8;
  padding: 20rpx 0;
  display: flex;
  flex-wrap: wrap;
}

.address_list_left {
  width: 20%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}

.name {
  width: 100%;
  font-size: 30rpx;
  letter-spacing: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.moren {
  font-size: 24rpx;
  width: 70rpx;
  height: 34rpx;
  border: 1rpx solid #cf1322;
  color: #cf1322;
  display: flex;
  align-items: center;
  justify-content: center;
}

.address_list_middle {
  width: 70%;
  height: 100%;
  padding: 0 30rpx 0 20rpx;
}

.phone {
  height: 40rpx;
  width: 100%;
  font-size: 30rpx;
  color: #262626;
}

.address {
  width: 100%;
  height: 70rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  color: #8c8c8c;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.address_list_right{
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 100%;
}
.button_box{
  width: 100vw;
  height: 140rpx;
  position: fixed;
  bottom: 40rpx;
  left: 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 40rpx;
}
.add_address{
  width: 320rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #B6385C;
  border: 1rpx solid #605A5C;
}
.add_address2{
  width: 320rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #52c41a;
  border: 1rpx solid #90928D;
}
.add_address2 image{
  width: 40rpx;
  height: 40rpx;
}