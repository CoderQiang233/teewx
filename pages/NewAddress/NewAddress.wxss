

.edit_box{
  width: 100vw;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.name{
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #D9D9D9;
  font-size: 30rpx;
  color: #232323;
  box-sizing: border-box;
}
.picker{
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #D9D9D9;
  font-size: 30rpx;
  color: #8a8a8a;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;

}
.picker_placeholder{
  font-size: 28rpx;
  color: #d4b106;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.button_box{
  width: 100%;
  height: 80rpx;
  line-height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.button_left{
  display: flex;
  align-items: center;
}
.button_left_text{
  font-size: 30rpx;
  color: #8a8a8a;
}
.button_right{
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color:#89BD29;
  padding-right: 30rpx;
}
.wx_icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 6rpx;
}
.baocun{
  width: 100vw;
  height: 80rpx;
  background: #B23032;
  color: white;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 6rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}