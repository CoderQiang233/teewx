/* pages/product/product.wxss */

.page {
  background-color: #f8f8f8;
}

swiper {
  height: 800rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.h2 {
  font-weight: normal;
  margin: 0;
  font-size: 16px;
  line-height: 20px;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.center {
  padding: 10px;
  background-color: #fff;
}

.pa {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding-top: 5px;
}

.pa .price {
  color: #f44 !important;
  flex: 1;
  display: flex;
  align-items: center;
}

.freight {
  font-size: 12px;
  color: #999;
  height: 100%;
}

.number {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  margin-top: 5px;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 10px;
  padding-bottom: 10px;
}

.number_1 {
  flex: 1;
  font-size: 14px;
  font-weight: 400;
}

.detail {
  margin-top: 5px;
  background-color: #fff;
  height: 100vh;
}

.detail image {
  width: 100vw !important;
}

