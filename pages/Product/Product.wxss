.paybtnbox {
  width: 100vw;
  height: 110rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  background: white;
  box-sizing: border-box;
}

.toindex {
  width: 160rpx;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  justify-content: center;
  box-sizing: border-box;
  padding: 13rpx 0 !important;
  color: #595959;
}

.toindex:first-child {
  border-right: 1rpx solid #e8e8e8;
}

.toindex .top {
  width: 100%;
  height: 60%;
  line-height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.toindex .bottom {
  width: 100%;
  height: 40%;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.paybtn {
  width: 430rpx;
  height: 100%;
  border: 0;
  background-color: #f44;
  color: #fff;
  border-radius: 0;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: normal;
  margin: 0;
}

.paybtn::after {
  padding: 0;
}

.paybtnbox_left {
  display: flex;
  flex-wrap: wrap;
  height: 100%;
}

.paybtnbox_left button {
  background: none;
  border: 0;
  padding: 0;
  margin: 0;
  border-radius: 0;
}

.paybtnbox_left button::after {
  border: 0;
  padding: 0;
}

.dlpriceimg {
  width: 160rpx;
  height: 50rpx;
  margin-left: 20rpx;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100vw;
}

.header_left {
  z-index: 999;
  opacity: 0.7;
}

.promotionBtn {
  position: fixed;
  right: 50rpx;
  bottom: 100px;
  display: block;
  background-color: #e23205;
  color: white;
  font-size: 38rpx;
  font-weight: bold;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  padding: 0;
}

.promotionBtn2 {
  position: fixed;
  left: 50rpx;
  bottom: 100px;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  padding: 0;
  line-height: 100% !important;
  display: flex;
  align-items: center;
  justify-content: center;
}

.promotionBtn2::after {
  padding: 0;
}
