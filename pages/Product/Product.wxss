/* pages/product/product.wxss */
.page{
  background-color: #f8f8f8;
  
}
swiper{
  height: 800rpx;
}
swiper-item image{
  width: 100%;
  height: 100%;
}
.h2{
    font-weight: normal;
    margin: 0;
    font-size: 16px;
    line-height: 20px;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.center{
  padding: 10px;
  background-color: #fff;
}
.pa{
 display: flex;
 flex-direction: row;
 justify-content: flex-start;
 align-items: center;
 padding-top: 5px;
}
.pa .price{
  color: #f44!important;
  flex: 1;
  display: flex;
  align-items: center;
}
.freight{
  
    font-size: 12px;
    color: #999;
    height: 100%;
   
}
.number{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  margin-top: 5px;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 10px;
  padding-bottom: 10px;
}
.number_1{
  flex: 1;
  font-size: 14px;
  font-weight: 400;
}
.detail{
  margin-top: 5px;
  background-color: #fff;
  height: 100vh;
}
.detail image{
  
    width: 100vw !important;
    
}
.paybtn{
    display: block;
    z-index: 100;
    position: fixed;
    bottom: 0px;
    height: 50px;
    background-color: #fff;
    width: 100%;
}
.paybtn_1{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: inherit;
}
.paybtn_1_left{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100px;
}
.paybtn_1_left image{
  height: 20px;
  width: 20px;
}
.paybtn_1_right{
  height: 100%;
  display: block;
  flex: 1;
  background-color: #f44 !important;
    color: #fff;
    line-height: 50px;
    text-align: center;
    
}
.gohome{
  position: fixed;
  z-index: 100px;
  bottom: 100px;
  left: 20px;
  background-color: rgba(34,34,34,.9);
  border-radius: 50%;
  width: 40px;
  height: 40px;
  text-align: center;
}
.gohome image{
  height: 25px;
  width: 25px;
  padding-top: 6px;

}
.paybtn_1 i-button{
  width: 100%;
  height: 100%;
}
.paybtn_1 button{
  width: 100%;
  height: 100%;
  background-color: #f44 !important;
  color: #fff !important;
  font-size: 18px;
  line-height: 50px;
}
.dlpriceimg{
  width: 160rpx;
  height: 50rpx;
  margin-left: 20rpx;
}
.header{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100vw;
}
.header_left{
  z-index: 999;
  opacity: 0.7;
}